<div class="contentForm signupForm" style="display:none;">
    {% embed 'contentBlock.twig' with {'title': 'Signup_Signup'|translate} %}
    {% block content %}

    <div class="message_container">
    </div>

    <form {{ form_data.attributes|raw }} ng-non-bindable>
        <input type="hidden" name="nonce" id="signup_form_nonce" value="{{ nonce }}" />
        <div class="row">
            <div class="col s12 input-field">
                <input type="text" name="login" id="signup_form_login" class="input" required size="20" autocorrect="off" autocapitalize="none" tabindex="10" />
                <label for="signup_form_login"><i class="icon-user icon"></i>
                    {{ 'Login_LoginOrEmail'|translate }}</label>
            </div>
        </div>
        <div class="row">
            <div class="col s12 input-field">
                <input type="email" name="email" id="signup_form_email" class="input" required size="20" autocorrect="off" autocapitalize="none" tabindex="10" />
                <label for="signup_form_email"><i class="icon-email icon"></i>
                    {{ 'Installation_Email'|translate }}</label>
            </div>
        </div>
        <div class="row">
            <div class="col s12 input-field">
                <input type="password" name="password" id="signup_form_password" class="input" required size="20" autocorrect="off" autocapitalize="none" tabindex="20" autocomplete="off" />
                <label for="signup_form_password"><i class="icon-locked icon"></i>
                    {{ 'Login_NewPassword'|translate }}</label>
            </div>
        </div>
        <div class="row">
            <div class="col s12 input-field">
                <input type="password" name="password_bis" id="signup_form_password_bis" class="input" required autocorrect="off" autocapitalize="none" size="20" tabindex="30" autocomplete="off" />
                <label for="signup_form_password_bis"><i class="icon-locked icon"></i>
                    {{ 'Login_NewPasswordRepeat'|translate }}</label>
            </div>
        </div>

        <div class="row actions">
            <div class="col s12">
                <input class="submit btn btn-block btn-large" id='signup_form_submit' type="submit"
                    value="{{ 'Signup_Signup'|translate }}" tabindex="100" />

                <span class="loadingPiwik" style="display:none;">
                    <img alt="Loading" src="plugins/Morpheus/images/loading-blue.gif" />
                </span>
            </div>
        </div>
    </form>
    <p id="nav">
        <a id="signup_form_nav" href="#" title="{{ 'Mobile_NavigationBack'|translate }}">{{ 'General_Cancel'|translate }}</a>
    </p>
    {% endblock %}
    {% endembed %}
</div>
